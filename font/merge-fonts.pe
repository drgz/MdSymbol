weight=$argv[1];

Open("FdSymbolA-" + weight + ".pfa");
MergeFonts("FdSymbolB-" + weight + ".pfa");
MergeFonts("FdSymbolC-" + weight + ".pfa");
MergeFonts("FdSymbolD-" + weight + ".pfa");
MergeFonts("FdSymbolE-" + weight + ".pfa");
MergeFonts("FdSymbolF-" + weight + ".pfa");

SetFontNames("FdSymbol-" + weight, "FdSymbol", "FdSymbol", weight ,"Copyright (c) 2011, Michael Ummels. This Font Software is licensed under the SIL Open Font License, Version 1.1.", "1.000");

SelectAll();
AddExtrema();
Simplify();
RoundToInt();
AutoHint();

Generate("FdSymbol-"+weight+".pfb", "", 0);
